<%- include('../partials/header') %>
<link rel="stylesheet" href="/styles/main.css">
<div class="content">
    <h1>Update Medicines</h1>
    <form action="/update-medicine" method="POST">
        <label for="medicineId">Medicine ID:</label>
        <input type="number" id="medicineId" name="medicineId" required>
        
        <label for="medicineName">Medicine Name:</label>
        <input type="text" id="medicineName" name="medicineName" required>
        
        <label for="medQuantity">Quantity to add:</label>
        <input type="number" id="medQuantity" name="medQuantity" required>

        <label for="expiry">Expiry Date:</label>
        <input type="date" id="expiry" name="expiry" required>
        
        <button type="submit">Update Medicine</button>
    </form>
    <a href="/view-medicines" class="btn">View Medicines</a>
</div>
<%- include('../partials/footer') %>
