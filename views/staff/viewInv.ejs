<%- include('../partials/header') %>
<link rel="stylesheet" href="/styles/main.css">
<div class="content">
    <h1>View Inventory</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Item Name</th>
                <th>Stock</th>
            </tr>
        </thead>
        <tbody>
            <% inventory.forEach(function(item) { %>
                <tr>
                    <td><%= item.id %></td>
                    <td><%= item.itemname %></td>
                    <td><%= item.stock %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>
<%- include('../partials/footer') %>
